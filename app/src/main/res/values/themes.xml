<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FindARoomVer2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellowEFC900</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellowEFC900</item>
        <item name="colorSecondaryVariant">@color/yellowEFC900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellowEFC900</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="floatingActionButtonStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">52dp</item>
    </style>

    <style name="appBarIconsStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_16</item>
        <item name="android:layout_marginTop">@dimen/size_16</item>
        <item name="android:tint">@color/black</item>
    </style>


    <style name="generalLinearLayoutStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/size_16</item>
    </style>

    <style name="generalTextTitleStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="generalTextSubtitleStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="generalTextHintStyle" parent="generalTextSubtitleStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/size_14</item>
    </style>

    <style name="dividerStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1</item>
        <item name="android:layout_marginBottom">@dimen/size_12</item>
        <item name="android:layout_marginTop">@dimen/size_12</item>
        <item name="dividerColor">@color/gray</item>
    </style>
</resources>