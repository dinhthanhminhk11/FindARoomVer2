<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ĐĂNG KÝ"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/noto_sans"
                    android:textFontWeight="800"
                    android:textColor="#FFCA00"
                    android:textSize="24dp"
                    />
            </FrameLayout>

            <LinearLayout
                android:backgroundTint="@color/white"
                android:layout_marginTop="120dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textFontWeight="500"
                    android:textColor="@color/black"
                    android:text="Nhập số điện thoại"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtSdt"
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black"
                    android:hint="Nhập số điện thoại"
                    app:errorEnabled="true"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/sodienthoai"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F80101"
                    android:layout_marginStart="16dp"
                    android:id="@+id/txt_err_fullname"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textFontWeight="500"
                    android:textColor="@color/black"
                    android:text="Nhập số họ và tên"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtUser"
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black"
                    android:hint="Nhập họ và tên"
                    app:errorEnabled="true"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/username"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F80101"
                    android:layout_marginStart="16dp"
                    android:id="@+id/txt_err_phone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textFontWeight="500"
                    android:textColor="@color/black"
                    android:text="Nhập mật khẩu"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black"
                    android:hint="Nhập số mật khẩu"
                    app:errorEnabled="true"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/password"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F80101"
                    android:layout_marginStart="16dp"
                    android:id="@+id/txt_err_pass"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textFontWeight="500"
                    android:textColor="@color/black"
                    android:text="Nhập lại mật khẩu"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtPassword_02"
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/black"
                    android:hint="Nhập lại mật khẩu"
                    app:errorEnabled="true"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/password_02"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F80101"
                    android:layout_marginStart="16dp"
                    android:id="@+id/txt_err_pass22"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn trạng thái tài khoản"
                        android:fontFamily="@font/noto_sans"
                        android:textFontWeight="500"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/black"
                        />
                    <RelativeLayout
                        android:background="@drawable/category_boder"
                        android:layout_width="343dp"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/txtTrangthai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Người Thuê/Người cho thuê"
                            android:textColor="#8A98A4"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/spinnerDientich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignBottom="@id/txtTrangthai"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F80101"
                    android:layout_marginStart="16dp"
                    android:id="@+id/txt_err_status"/>


                <Button
                    android:id="@+id/btn_SignUp"
                    android:text="Đăng Ký"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#FFCA00"
                    android:fontFamily="@font/noto_sans"
                    android:textFontWeight="500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn đã có tài khoản? "
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />
                    <TextView
                        android:id="@+id/tv_SignIn"
                        android:text="Đăng nhập ngay"
                        android:textColor="#FFCA00"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </ScrollView>

</LinearLayout>
